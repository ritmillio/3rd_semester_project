@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/css/site.css" type="text/css" />
    <title>Aalborg Aair</title>
</head>
<body>
    <div class="content">
        <div id="booking" class="section">
            <div class="section-center">
                <div class="container">
                    <div class="row">
                        <div class="col-md-7 col-md-push-5">
                            <div class="booking-cta">
                                <h1 id="aalborgair">Aalborg Aair</h1>
                                <p id="aalborgairparag">
                                    Lorem ipsum dolor sit amet consectetur adipisicing elit.</br>
                                    Animi facere, soluta magnam consectetur molestias
                                    itaque
                                    </br>
                                    ad sint fugit architecto incidunt iste </br>
                                    culpa perspiciatis possimus </br>
                                    voluptates aliquid consequuntur cumque
                                    quasi.
                                    </br>
                                    Perspiciatis.
                                </p>
                            </div>
                        </div>
                        <div class="col-md-4 col-md-pull-7">
                            <div class="booking-form">
                                <form>
                                    <div class="form-group">
                                        <span class="form-label">Departure</span>
                                        <input id="departurelocation" class="form-control" type="text" placeholder="Enter a destination">
                                    </div>
                                    <div class="form-group">
                                        <span class="form-label">Arrival</span>
                                        <input id="arrivallocation" class="form-control" type="text" placeholder="Enter a destination">
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <div class="form-group">
                                                <span class="form-label">Check In</span>
                                                <input onclick="calendar()" id="datepicker" class="form-control" type="date">
                                            </div>
                                        </div>
                                        <div class="col-sm-6">
                                            <div class="form-group">
                                                <span class="form-label">Check out</span>
                                                <input id="datepicker" class="form-control" type="date">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-4">
                                            <div class="form-group">
                                                <span class="form-label">Trip</span>
                                                <select class="form-control">
                                                    <option placeholder="Round T">Round Trip</option>
                                                    <option>One Way</option>
                                                </select>
                                                <span class="select-arrow"></span>
                                            </div>
                                        </div>
                                        <div class="col-sm-4">
                                            <div class="form-group">
                                                <span class="form-label">Passenger</span>
                                                <select class="form-control">
                                                    <option>1</option>
                                                    <option>2</option>
                                                    <option>3</option>
                                                    <option>4</option>
                                                    <option>5</option>
                                                    <option>6</option>
                                                    <option>7</option>
                                                    <option>8</option>
                                                    <option>9</option>
                                                    <option>10</option>
                                                    <option>11</option>
                                                    <option>12</option>
                                                    <option>13</option>
                                                    <option>14</option>
                                                    <option>15</option>
                                                </select>
                                                <span class="select-arrow"></span>
                                            </div>
                                        </div>
                                        <div class="col-sm-4">
                                            <div class="form-group">
                                                <span class="form-label">Children</span>
                                                <select class="form-control">
                                                    <option>0</option>
                                                    <option>1</option>
                                                    <option>2</option>
                                                </select>
                                                <span class="select-arrow"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-btn">
                                        <a asp-page="listofflights">
                                            Search
                                        </a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

